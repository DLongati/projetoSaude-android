<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FEBE5"
    tools:context=".faces">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:text="Como você está se sentindo hoje?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgFaces"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            app:srcCompat="@drawable/faces" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chMFeliz"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/chFeliz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/chIndiferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/chTriste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/chMTriste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quais sensações sentiu?"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/chAnsiedade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ansiedade" />

            <CheckBox
                android:id="@+id/chFaltaDeAr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Falta de Ar" />

            <CheckBox
                android:id="@+id/chAlegria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alegria" />

            <CheckBox
                android:id="@+id/chApatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apático" />

            <CheckBox
                android:id="@+id/chOtimista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otimista" />

            <CheckBox
                android:id="@+id/chDeprimido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deprimido" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar" />

            <Button
                android:id="@+id/btnTelaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tela Inicial" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>